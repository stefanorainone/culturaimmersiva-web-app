rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Cities images folder
    match /cities/{allPaths=**} {
      // Everyone can read images (for public website)
      allow read: if true;
      
      // Only authenticated users can upload/delete images
      allow write: if request.auth != null;
    }
    
    // Block all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
